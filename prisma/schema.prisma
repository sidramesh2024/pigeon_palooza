generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/pigeon_palooza/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Pigeon {
    id                   String   @id @default(cuid())
    imageUrl             String
    attitudeRating       Int      // 1-5 scale
    strutRating          Int      // 1-5 scale  
    touristJudgingRating Int      // 1-5 scale
    overallScore         Float    // calculated total score
    landmark             String   // NYC landmark name
    bonusPoints          Int      @default(0)
    funDescription       String   // NYC slang description
    submittedBy          String   @default("Anonymous New Yorker")
    createdAt            DateTime @default(now())
    updatedAt            DateTime @updatedAt

    @@map("pigeons")
}
